{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2019"],
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
  },
  "exclude": ["dist", ".next", "out", "docs", "public", "coverage"],
  "include": ["next-env.d.ts", "**/*.json", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
}
